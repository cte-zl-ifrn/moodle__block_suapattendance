<body>
    <main class="d-flex text-center justify-content-center">
        <div class="w-50 p-10 p-5">
            <h1 class="pb-1 text-left">Adicionar período de aula</h1>
            <form method="POST" class="mt-5">
                <div class="text-left">
                    <label for="dataInicioPeriodo" class="h5">Data de Início: </label>
                    <input id="dataInicioPeriodo" class="form-control w-75" type="date" name="data_inicio" value="{{periodo_aula.data_inicio}}" required><br>

                    <label for="dataFimPeriodo" class="h5">Data de Fim: </label>
                    <input id="dataFimPeriodo" class="form-control w-75" type="date" name="data_fim" value="{{periodo_aula.data_fim}}" required><br>

                    <label for="conteudoPeriodo" class="h5">Conteúdo do período: </label>
                    <textarea id="conteudoPeriodo" class="form-control w-75" name="conteudo" placeholder="Conteúdo..." value="{{periodo_aula.conteudo}}" required></textarea>

                    <label for="ordemPeriodo" class="h5 mt-3">Ordem: </label><br/>
                    <input id="ordemEtapa" min="1" class="form-control w-75" type="number" name="ordem_periodo" placeholder="Ordem da etapa" value="{{periodo_aula.ordem}}" required><br>

                    <div class="mt-4">
                        <input type="submit" value="Salvar" class="btn btn-primary">
                        <a class="btn border border-dark btn-outline-dark" href="/blocks/suapattendance/configurar-frequencia.php?id={{course_id}}">Cancelar</a>
                    <div>
                </div>
            </form>
        </div>
    </main>
</body>