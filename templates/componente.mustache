<body>
    <div id="componentes">
        <h1>Objeto de aprendizagem que irá valer presença: </h1>
        <div>
            <form method="POST">
                <table>
                    <thead>
                        <tr>
                            <th>Componente</th>
                            <th>Percentual de presença</th>
                        </tr>
                    </thead>
                    <tbody>
                {{#cms}}
                        <tr>
                            {{#ja_adicionado}}<td><input name="componente-{{cmid}}" type="checkbox" class="checkbox-coluna-1" id="componente-{{cmid}}" checked/>{{name}}</td>{{/ja_adicionado}}
                            {{^ja_adicionado}}<td><input name="componente-{{cmid}}" type="checkbox" class="checkbox-coluna-1" id="componente-{{cmid}}"/>{{name}}</td>{{/ja_adicionado}}

                            {{#ja_adicionado}}<td><input name="presenca-{{cmid}}" type="number" class="checkbox-coluna-2" id="componente-percentual-presenca-{{cmid}}" min="1" max="100" value="{{presenca}}"/>%</td>{{/ja_adicionado}}
                            {{^ja_adicionado}}<td><input name="presenca-{{cmid}}" type="number" class="checkbox-coluna-2" id="componente-percentual-presenca-{{cmid}}" min="1" max="100" disabled/>%</td>{{/ja_adicionado}}
                        </tr>
                {{/cms}}
                    </tbody>
                </table>
            </div>
            <input type="submit" value="Salvar"/>
        </form>
    </div>
    <script src="templates/js/componente.js"></script>
</body>