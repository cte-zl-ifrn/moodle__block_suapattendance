<body>
    <h1>Configurar frequências do curso</h1>
    <h2 class="mb-5">Curso: {{course.fullname}}</h2>
    <a class='class="btn btn-outline-primary" btn-lg btn-block border border-primary mt-3 mb-3' data-mdb-ripple-color="dark" href='etapa.php?id={{course.id}}'><img src="images/Icon-feather-plus-square.svg" alt="add icon"><e class="p-2"> Adicionar etapa</e></a>
    <div id="etapas">
        {{#etapas}}
        <div class="card">
            <div class="card-header" id="etapa-heading{{id}}">
                <h5 class="mb-0 d-flex align-items-center">
                    <a class="btn mr-auto p-1" data-toggle="collapse" data-target="#etapa{{id}}" aria-expanded="true" aria-controls="etapa{{id}}"><h2 style="font-size: 2em;" class="mb-0">{{nome}}</h2></a>
                    <a class='p-2' href='etapa.php?id={{course.id}}&etapaid={{id}}'><img src="images/Icon-awesome-pencil-alt.svg" alt="edit icon"><e class="p-1"> Editar</e></a>
                    <a class='p-2' href='etapa.php?id={{course.id}}&etapaid={{id}}&delete=1'><img src="images/Icon-awesome-trash-alt.svg" alt="edit icon"><e class="p-1"> Excluir</e></a>
                </h5>
            </div>
            <div id="etapa{{id}}" class="collapse show" aria-labelledby="etapa-heading{{id}}" data-parent="#etapas">
                <div class="card-body">
                    <a class='class="btn btn-outline-primary" btn-lg btn-block border border-primary mb-3' data-mdb-ripple-color="dark" href='periodo.php?id={{course.id}}&etapaid={{id}}'><img src="images/Icon-feather-plus-square.svg" alt="add icon"><e class="p-2"> Adicionar período</e></a>

                    <div id="periodo_aula">
                        {{#periodos_aula}}
                        <div class="card">
                            <div class="card-header" id="periodo_aula-heading{{id}}">
                                <h5 class="mb-0 d-flex align-items-center">
                                    <a class="btn mr-auto p-1" data-toggle="collapse" data-target="#periodo_aula{{id}}" aria-expanded="true" aria-controls="periodo_aula{{id}}"><p style="font-size: 1em;" class="mb-0"><e class="h2">Período</e><span class="ml-2"> Entre <i>{{data_inicio_formatada}}</i> e <i>{{data_fim_formatada}}</i>.</span></p></a>
                                    <a class='p-2' href='periodo.php?id={{course.id}}&etapaid={{etapaid}}&periodoaula_id={{id}}'><img src="images/Icon-awesome-pencil-alt.svg" alt="edit icon"><e class="p-1"> Editar</e></a>
                                    <a class='p-2' href='periodo.php?id={{course.id}}&etapaid={{etapaid}}&periodoaula_id={{id}}&delete=1'><img src="images/Icon-awesome-trash-alt.svg" alt="edit icon"><e class="p-1"> Excluir</e></a>
                                </h5>
                            </div>
                            <div id="periodo_aula{{id}}" class="collapse show" aria-labelledby="periodo_aula-heading{{id}}" data-parent="#periodos_aulas">
                                <div class="card-body">
                                    <p><span class="h4">Conteúdo: </span>{{conteudo}}</p>
                                    <a class='class="btn btn-outline-primary" btn-lg btn-block border border-primary mb-3' data-mdb-ripple-color="dark" href='aula.php?id={{course.id}}&periodoaula_id={{id}}'><img src="images/Icon-feather-plus-square.svg" alt="add icon"><e class="p-2"> Adicionar aula</e></a>
                                <div id="aula{{id}}">
                                    {{#aulas}}
                                        <div class="card">
                                            <div class="card-header" id="aula-heading{{id}}">
                                                <h5 class="mb-0 d-flex align-items-center">
                                                    <a class="btn mr-auto p-1" data-toggle="collapse" data-target="#aula{{id}}" aria-expanded="true" aria-controls="aula{{id}}"><p style="font-size: 1em;" class="mb-0"><span class ="h2">Aula {{ordem}}</span> <span class="ml-2">Quantidade: {{quantidade}}</span></p></a>
                                                    <a class='p-2' href='aula.php?id={{course.id}}&periodoaula_id={{periodoaula_id}}&aulaid={{id}}'><img src="images/Icon-awesome-pencil-alt.svg" alt="edit icon"><e class="p-1"> Editar</e></a>
                                                    <a class='p-2' href='aula.php?id={{course.id}}&periodoaula_id={{periodoaula_id}}&aulaid={{id}}&delete=1'><img src="images/Icon-awesome-trash-alt.svg" alt="edit icon"><e class="p-1"> Excluir</e></a>
                                                </h5>
                                            </div>
                                            <div class="card-body">
                                            <a class='class="btn btn-outline-primary" btn-lg btn-block border border-primary mb-3' data-mdb-ripple-color="dark" href='componente.php?id={{course.id}}&aulaid={{id}}'><img src="images/Icon-feather-plus-square.svg" alt="add icon"><e class="p-2"> Adicionar componente</e></a>
                                            <div id="componente">
                                                {{#componentes}}
                                                    <div class="card-header border border-second mt-2 align-items-center" id="componente{{id}}">
                                                        <h5 class="mb-0 d-flex justify-content-between">
                                                            <span class="mt-2">{{module.name}}</span>
                                                            <a class='p-2' href='componente.php?id={{course.id}}&aulaid={{aulaid}}&componenteid={{id}}&delete=1'><img src="images/Icon-awesome-trash-alt.svg" alt="edit icon"><e class="p-1"> Excluir</e></a>
                                                        </h5>
                                                    </div>
                                                {{/componentes}}
                                            </div>
                                            </div>
                                        </div>
                                    {{/aulas}}
                                </div>
                                </div>
                            </div>
                        </div>
                        {{/periodos_aula}}
                    </div>

                </div>
            </div>
        </div>
        {{/etapas}}
    </div>
</body>